<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Hostel Booking Admin</label>
    <description>Full access to all hostel booking custom fields and Apex classes</description>
    <hasActivationRequired>false</hasActivationRequired>
    <license>Salesforce</license>

    <!-- Campaign (read access for booking date ranges) -->
    <objectPermissions>
        <object>Campaign</object>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>

    <!-- Apex Classes -->
    <classAccesses>
        <apexClass>Hostel_AvailabilityController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>Hostel_AvailabilityService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>Hostel_BookingController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>Hostel_BookingService</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Product2 Fields -->
    <fieldPermissions>
        <field>Product2.Gender__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Product2.Pricing_Model__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Product2.Max_Guests__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Product2.Amenities__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Product2.Image_URL__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Product2.Display_Order__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>

    <!-- Asset Fields -->
    <fieldPermissions>
        <field>Asset.Is_Bookable__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>

    <!-- Opportunity Fields -->
    <fieldPermissions>
        <field>Opportunity.Check_In_Date__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Opportunity.Check_Out_Date__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Opportunity.Number_of_Nights__c</field>
        <readable>true</readable>
        <editable>false</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Opportunity.Number_of_Guests__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>

    <!-- OpportunityLineItem Fields -->
    <fieldPermissions>
        <field>OpportunityLineItem.Asset__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>OpportunityLineItem.Number_of_Guests__c</field>
        <readable>true</readable>
        <editable>true</editable>
    </fieldPermissions>
</PermissionSet>
